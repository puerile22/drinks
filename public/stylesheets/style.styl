/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #838387
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 640px
  margin-top 10px
  margin-left 50px
  float left
  overflow hidden
a 
  text-decoration none
  color white
.search
  float left
  width 300px
  margin-left 150px

iframe
  margin-top 20px

.main-content
  height 800px
  width 640px
  float left
  overflow auto
  position relative

#name 
  text-align center
  font-weight bold
  font-size 25px
  margin-bottom 20px

.single-img
  float left

.info
  float right
  display inline-block
  width 290px
  margin-right 20px
  margin-left 20px
  h3
    font-weight bold
    text-align center
    margin-top 20px
    text-decoration underline
  p
    text-align center

.search-result
  float left
  display inline-block
  position relative
  margin-left 10px

  p 
    text-align center  

label
  float left
  width 100px
  margin-left 5px

.bottle
  margin-top 5px

.find
  margin-left 5px

.fa-random
  float right

.sidebar
  float left
  width 250px
  height 500px

  
p
  line-height 1.8

footer
  clear both
  width 1000px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px